<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ContactActivity">

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:contentDescription="@string/bg_image_contact"
        android:src="@drawable/contact_bg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:padding="16dp">
    <TextView
        android:id="@+id/textViewContactTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contact_us"
        android:textSize="24sp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/textViewContactInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/email_contact_example_com_nphone_1234567890" />

    <TextView
        android:id="@+id/textViewAddressTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/visit_us"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/_123_main_street_ncity_state_12345" />

    <Button
        android:id="@+id/buttonEmail"
        android:layout_width="100dp"
        android:layout_height="53dp"
        android:text="@string/send_email"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/buttonCall"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:text="@string/call_us"
        android:layout_gravity="center_horizontal"/>
    </LinearLayout>

</FrameLayout>
