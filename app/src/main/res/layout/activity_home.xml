<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="#FFA5D6A7"
    android:orientation="vertical">

    <Button
        android:id="@+id/aboutBtnToggle"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_margin="3dp"
        android:layout_gravity="center"
        android:padding="25dp"
        android:textSize="20sp"
        android:text="@string/show_about"/>

    <LinearLayout
        android:id="@+id/layoutInfo"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:visibility="gone"
        android:padding="16dp">
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="#FFE8F5E9"
            android:textSize="18sp"
            android:padding="20dp"
            android:layout_gravity="center"
            android:text="@string/about_nutriguide"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnCategory"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_gravity="center"
        android:padding="25dp"
        android:textSize="20sp"
        android:text="@string/category_button"/>

    <Button
        android:id="@+id/btnContact"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_gravity="center"
        android:padding="25dp"
        android:textSize="20sp"
        android:text="@string/contact_button"/>

</LinearLayout>